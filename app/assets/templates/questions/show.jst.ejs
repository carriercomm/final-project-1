<div class="question-title">
  <%= question.escape("title") %>
</div>

<br>
<br>

<div class="question">
  <br>
  <br>

  <div class="question-body">
    <%= question.escape("body") %>
  </div>

  <br>

  <div class="question-info pull-right">
    <span title="<%= question.escape("created_at") %>">
      asked <%= $.timeago(question.escape("created_at")) %>
    </span>
    <br>
    <%= question.escape("asker_id") %>
  </div>
  <div class="clearfix"></div>
</div>

<br>

<div class="comments-list"></div>
<div class="clearfix"></div>
<div class="new-question-comment hidden"></div>

<button class="add-question-comment btn">Add comment</button>

<div class="accepted-answer"></div>
<div class="answer-list"></div>
<div class="new-answer"></div>